                <h2>Featured Products</h2>
                <div class="scroll-container">
                    <div class="product-list">
                        <% products.forEach(product => { %>
                            <a href="/display/<%= product.id %>">
                                <div class="product-item">
                                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                                    <h3><%= product.name %></h3>
                                    <p><b>₹<%= product.price %></b></p>
                                    <form action="/cart/add/<%= product.id %>" method="POST">
                                        <button class="add-to-cart">
                                             Add to Cart
                                        </button>
                                    </form>
                                    <!-- <button class="add-to-cart">
                                        <i class="fas fa-shopping-cart"></i> Add to Cart
                                    </button> -->
                                </div>
                            </a>
                        <% }) %>
                    </div>
                </div>
            </div>
        </section>
        <div class="featured-container">
            <div class="row">
                <div class="featured-item">
                    <img src="/images/pic1.png" alt="Featured Image 1">
                    
                </div>
                <div class="featured-item">
                    <img src="/images/pic2.png" alt="Featured Image 2">
                    
                </div>
            </div>
            <div class="row">
                <div class="featured-item">
                    <img src="/images/pic3.png" alt="Featured Image 3">
                   
                </div>
                <div class="featured-item">
                    <img src="/images/pic4.png" alt="Featured Image 4">
                    
                </div>
            </div>
        </div>
        <div class="featured-column">
            
                <div class="column">
                    <img src="/images/Companies.png" alt="Featured Image 1">
                    
                </div>
                
